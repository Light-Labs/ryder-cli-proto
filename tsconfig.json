{
	"compilerOptions": {
		"declaration": true,
		"importHelpers": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"outDir": "lib",
		"rootDir": "src",
		"strict": true,
		"target": "es2017",
		"typeRoots": [
			"./node_modules/@types",
			"./dist/types/",
		]
	},
	"include": [
		"src/**/*",
	],
	"exclude": [
		"node_modules"
	]
}
