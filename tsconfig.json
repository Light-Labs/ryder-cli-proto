{
	"extends": "@tsconfig/recommended/tsconfig.json",
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": [
			"es6",
			"es2015",
			"dom"
		],
		"declaration": false,
		"outDir": "./dist",
		"strict": true,
		"types": [
			"node"
		],
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"typeRoots": [
			"./node_modules/@types",
			"./types/",
			"./dist/types/"
		],
		"allowJs": true,
		"declarationMap": false
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules",
		"scripts",
		"dist"
	]
}
